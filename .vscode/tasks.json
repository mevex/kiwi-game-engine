{
	"tasks": [
		{
			"type": "shell",
			"label": "Build Engine",
			"windows": {
				"command": "${workspaceFolder}/engine/build.bat"
			},
			"options": {
				"cwd": "${workspaceFolder}/engine"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "Task generated by Debugger."
		},
		{
			"type": "shell",
			"label": "Build Testbed",
			"windows": {
				"command": "${workspaceFolder}/testbed/build.bat"
			},
			"options": {
				"cwd": "${workspaceFolder}/testbed"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Build Everything",
			"windows": {
				"command": "${workspaceFolder}/build-all.bat",
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	],
	"version": "2.0.0"
}